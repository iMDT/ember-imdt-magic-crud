<div class="page">
  <div class="page-header">
    <h3 class="page-title">
      {{magicCrud.crudTitle}}
      {{#if model.id}}
        <small>#{{model.id}}</small>
        <small class="pull-right"><b>Última Alteração:</b> {{moment-format model.modificacao 'L' allow-empty=true}}</small>
      {{/if}}
    </h3>
  </div>

  <div class="page-body">
    <form class="form" {{action "saveRecord" on="submit"}}>
      {{magic-form
        model=model
        errors=errors
        definitions=formDefinitionsMC
        submitted=submitted}}

        <hr>

        <div class="row form-group">
          <div class="col-xs-6 col-sm-3 col-lg-2">
            <button class="btn btn-block btn-lg btn-primary" type="submit">{{fa-icon 'floppy-o' fixedWidth=true}} Salvar</button>
          </div>
          <div class="col-xs-6 col-sm-3 col-lg-2">
            <button class="btn btn-block btn-lg btn-default" {{action 'cancelAction'}}>{{fa-icon 'undo' fixedWidth=true}} Cancelar</button>
          </div>
        </div>
    </form>
  </div>
</div>
